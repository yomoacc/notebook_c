long long quick_pow(long long a, long long b, long long MOD) {
    long long res = 1;
    a %= MOD;
    while (b > 0) {
        if (b & 1) res = (res * a) % MOD;
        a = (a * a) % MOD;
        b >>= 1;
    }
    return res;
}
// 调用：quick_pow(2, 1000000000, 998244353) 等价于 Python 的 pow(2, 10**9, 998244353)
